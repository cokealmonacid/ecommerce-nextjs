// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ImageSlider {
  id          String  @id @default(cuid())
  image       String
}

model Category {
  id          String  @id @default(cuid())
  title       String
  slug        String
  products    Product[]
}

model Product {
  id          String  @id @default(cuid())
  img         String
  title       String
  description String
  brand       String
  price       Int
  slug        String
  category    Category @relation(fields: [category_id], references: [id])
  category_id String
}